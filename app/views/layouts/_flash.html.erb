<div class="fixed top-6 left-0 right-0 z-60 px-6 pointer-events-none">
  <% flash.each do |type, message| %>
    <div 
      data-controller="flash"
      class="max-w-md mx-auto bg-white/60 backdrop-blur-xl border border-white/50 px-6 py-4 rounded-3xl shadow-glass flex items-center justify-between gap-3 animate-bounce-in pointer-events-auto mb-3"
    >
      <div class="flex items-center gap-3">
        <div class="w-2 h-2 rounded-full <%= type == 'notice' ? 'bg-emerald-400' : 'bg-red-400' %>"></div>
        <p class="text-sm font-bold text-gray-700"><%= message %></p>
      </div>
      
      <button data-action="click->flash#dismiss" class="text-gray-400 hover:text-gray-600 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      </button>
    </div>
  <% end %>
</div>