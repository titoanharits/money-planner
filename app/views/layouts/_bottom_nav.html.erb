<%# app/views/layouts/_bottom_nav.html.erb %>
<% if user_signed_in? %>
  <nav class="fixed bottom-0 left-0 right-0 z-50 bg-orange-50 border-t-2 border-slate-900 px-6 pb-4">
    <div class="max-w-md mx-auto flex items-end justify-between">
      
      <%# Home %>
      <%= link_to authenticated_root_path, class: "flex flex-col items-center gap-1 group" do %>
        <div class="p-1 rounded-lg group-hover:bg-orange-100 transition-colors">
					<i data-lucide="home" class="w-5 h-5 text-slate-900"></i>
        </div>
        <span class="text-2xs font-black uppercase tracking-wider">Home</span>
      <% end %>

      <%# Categories %>
      <%= link_to categories_path, class: "flex flex-col items-center gap-1 group" do %>
        <div class="p-1 rounded-lg group-hover:bg-orange-100 transition-colors">
          <i data-lucide="wallet" class="w-5 h-5 text-slate-900"></i>
        </div>
        <span class="text-2xs font-black uppercase tracking-wider">Budget</span>
      <% end %>

      <%# Tombol Tengah (Add) %>
      <div class="relative -top-8">
        <%= link_to new_category_path, class: "w-16 h-16 bg-indigo-400 border-2 border-slate-900 rounded-full flex flex-col items-center justify-center text-white active:scale-95 transition-all" do %>
					<i data-lucide="plus" class="w-6 h-6"></i>
        <% end %>
        <span class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-2xs font-black uppercase tracking-wider text-slate-900">Add</span>
      </div>

      <%# Stats/Analytics %>
      <a href="#" class="flex flex-col items-center gap-1 group">
        <div class="p-1 rounded-lg group-hover:bg-orange-100 transition-colors">
          <i data-lucide="arrow-right-left" class="w-5 h-5 text-slate-900"></i>
        </div>
        <span class="text-2xs font-black uppercase tracking-wider">History</span>
      </a>

      <%# Logout %>
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "flex flex-col items-center gap-1 group" do %>
        <div class="p-1 rounded-lg group-hover:bg-red-50 transition-colors">
					<i data-lucide="log-out" class="w-5 h-5 text-slate-900"></i>
        </div>
        <span class="text-2xs font-black uppercase tracking-wider">Exit</span>
      <% end %>

    </div>
  </nav>
<% end %>