<%# app/views/devise/sessions/new.html.erb %>
<div class="min-h-screen flex items-center justify-center p-6">
  <div class="w-full max-w-md bg-white/40 backdrop-blur-xl border border-white/50 shadow-glass rounded-4xl p-10">
    
    <div class="text-center mb-10">
      <div class="inline-flex p-3 bg-linear-to-tr from-indigo-400 to-blue-500 rounded-2xl shadow-lg mb-4">
        <i data-lucide="piggy-bank" class="w-8 h-8 text-white"></i>
      </div>
      <h2 class="text-2xl font-bold text-gray-800">Money Planner</h2>
      <p class="text-gray-500 text-sm">Welcome back, please login</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div class="group">
        <%= f.label :username, class: "block text-xs font-semibold text-gray-500 mb-1.5 ml-1" %>
        <%= f.text_field :username, autofocus: true, placeholder: "Username",
            class: "w-full bg-white/60 border border-white/20 rounded-2xl py-3.5 px-5 text-gray-700 focus:bg-white focus:ring-4 focus:ring-blue-500/10 outline-none transition-all duration-300 shadow-sm" %>
      </div>

      <div class="group">
        <%= f.label :password, class: "block text-xs font-semibold text-gray-500 mb-1.5 ml-1" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••",
            class: "w-full bg-white/60 border border-white/20 rounded-2xl py-3.5 px-5 text-gray-700 focus:bg-white focus:ring-4 focus:ring-blue-500/10 outline-none transition-all duration-300 shadow-sm" %>
      </div>

      <div class="flex justify-between items-center py-2">
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded-lg border-gray-300 text-blue-500 focus:ring-0 w-5 h-5" %>
          <label class="text-sm text-gray-500 font-medium">Keep me in</label>
        </div>
      </div>

      <%= f.submit "Sign In", 
          class: "w-full py-4 bg-gradient-to-r from-indigo-400 to-blue-500 text-white font-bold rounded-2xl shadow-lg shadow-blue-500/20 hover:scale-[1.02] active:scale-[0.98] transition-all cursor-pointer" %>
    <% end %>

    <div class="mt-10 text-center">
      <p class="text-sm text-gray-500">
        New here? <%= link_to "Create Account", new_registration_path(resource_name), class: "text-blue-600 font-bold" %>
      </p>
    </div>
  </div>
</div>